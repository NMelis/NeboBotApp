<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoneySponsorListActivity">

    <LinearLayout
        android:layout_width="252dp"
        android:layout_height="241dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494">

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Yandex"
            android:textAllCaps="false"
            android:text="Yandex (ссылка)" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Нажмити на кнопки чтобы скопировать номер WebMoney, Qiwi или номер Yandex" />

        <Button
            android:id="@+id/button72"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="YandexNumber"
            android:text="Yandex (номер)"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="WebMoney"
            android:textAllCaps="false"
            android:text="WebMoney (Номер)" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Qiwi"
            android:textAllCaps="false"
            android:text="Qiwi (Номер телефона)" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Qiwi"
            android:textAllCaps="false"
            android:text="Qiwi (Ссылка)" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>